# @configure_input@

# Package
package      := @PACKAGE_NAME@
version      := @PACKAGE_VERSION@
major        := @PACKAGE_MAJOR_VERSION@
minor        := @PACKAGE_MINOR_VERSION@
tarname      := @PACKAGE_TARNAME@

# Directories
prefix       := @prefix@
exec_prefix  := @exec_prefix@
bindir       := @bindir@
libdir       := @libdir@
includedir   := @includedir@
myincludedir := $(includedir)/$(tarname)
srcdir       := src
testdir      := test
builddir     := build
exclusions   := ${addsuffix /,@EXCLUSIONS@}
srcmods      := ${filter-out ${addprefix $(srcdir)/,$(exclusions)}, \
                    $(srcdir)/ \
                    ${filter %/,${wildcard $(srcdir)/*/}} \
                    ${filter %/,${wildcard $(srcdir)/*/*/}}}
testmods     := ${filter-out ${addprefix $(testdir)/,$(exclusions)}, \
                    $(testdir)/ \
                    ${filter %/,${wildcard $(testdir)/*/}} \
                    ${filter %/,${wildcard $(testdir)/*/*/}}}
VPATH        := $(srcdir) $(testdir) $(builddir) $(srcmods) $(testmods)

# Tools
CXX          := @CXX@
INCLUDES     := -I./ -I$(srcdir)/ ${addprefix -I,$(srcmods)}
DEFS         := @DEFS@
CPPFLAGS     := @CPPFLAGS@
CXXFLAGS     := @CXXFLAGS@ $(DEFS) $(INCLUDES)
LIBS         := @LIBS@
LDFLAGS      := @LDFLAGS@
INSTALL      := @INSTALL@

# Files
sources      := ${foreach m,$(srcmods),${wildcard $(m)*.cpp}}
headers      := ${subst .cpp,.hpp,$(sources)}
objects      := ${notdir ${subst .cpp,.lo,$(sources)}}
fixtures     := ${foreach m,$(testmods),${wildcard $(m)*.cxx}}
tests        := ${notdir ${subst .cxx,,$(fixtures)}}
depends      := ${subst .lo,.d,$(objects)} ${addsuffix .d,$(tests)}
library      := lib$(tarname)-$(major).la

# Interface
.PHONY: all clean distclean maintainer-clean
.DEFAULT: all
all: objects tests library
clean:
	$(RM) -r $(builddir)
distclean: clean
	$(RM) config.h
	$(RM) config.log
	$(RM) config.status
	$(RM) Makefile
maintainer-clean: distclean
	$(RM) aclocal.m4
	$(RM) -r autom4te.cache
	$(RM) autoscan.log
	$(RM) configure.scan
	$(RM) config.guess
	$(RM) config.h.in
	$(RM) config.h.in~
	$(RM) config.sub
	$(RM) configure
	$(RM) install-sh
	$(RM) libtool
	$(RM) ltmain.sh

# Objects
.PHONY: objects
objects: $(objects)
%.lo: %.cpp %.hpp
	@echo "  CXX   $@"
	@libtool --mode=compile --quiet \
            $(CXX) $(CPPFLAGS) $(CXXFLAGS) \
            -c $< -o $(builddir)/$@

# Tests
.PHONY: tests
tests: $(tests)
%: %.cxx
	@echo "  CXX   $@"
	@libtool --mode=link --quiet \
        $(CXX) \
        $(CPPFLAGS) $(CXXFLAGS) $(LDFLAGS) \
        $< -o $(builddir)/$@ \
        ${addprefix $(builddir)/,${notdir ${filter %.lo,$^}}} \
        $(LIBS)

# Library
.PHONY: library
library: $(library)
$(library): $(objects)
	@echo "  LD    $@"
	@libtool --mode=link --quiet \
			$(CXX) \
			$(LDFLAGS) \
            -o $(builddir)/$(library) \
            ${addprefix $(builddir)/,$(objects)} \
			-rpath $(libdir) \
			-version-info $(minor):$(minor)

# Installation
.PHONY: install uninstall
install:
	@echo "  INSTALL $(library)"
	@$(INSTALL) -d $(libdir)
	@libtool --mode=install --quiet \
			$(INSTALL) $(builddir)/$(library) $(libdir)
	@libtool --mode=finish -n --quiet $(libdir)
	@echo "  INSTALL *.hpp *.h"
	@$(INSTALL) -d $(myincludedir)
	@$(INSTALL) -m 0644 config.h $(myincludedir)
	@$(INSTALL) -m 0644 src/*.hpp $(myincludedir)
	@$(INSTALL) -m 0644 src/*.h $(myincludedir)
	@$(INSTALL) -m 0644 src/*/*.hpp $(myincludedir)
	@$(INSTALL) -m 0644 src/*/*.h $(myincludedir)
	@$(INSTALL) -m 0644 src/*/*/*.hpp $(myincludedir)
	@$(INSTALL) -m 0644 src/*/*/*.h $(myincludedir)
uninstall:
	@echo "  UNINSTALL $(library)"
	@$(RM) $(libdir)/$(library)
	@$(RM) $(libdir)/$(linkername)
	@ldconfig $(libdir)
	@echo "  UNINSTALL *.hpp *.h"
	@$(RM) -r $(includedir)/$(tarname)

# Dependencies
.PHONY: depends
depends: $(depends)
$(builddir)/%.d: %.hpp
	@echo "  GEN   $@"
	@$(INSTALL) -d $(builddir)
	@$(CXX) \
            $(CPPFLAGS) $(CXXFLAGS) \
            -MM ${subst .hpp,.cpp,$<} \
            > $@
$(builddir)/%.d: %.cxx
	@echo "  GEN   $@"
	@$(INSTALL) -d $(builddir)
	@$(CXX) \
            $(CPPFLAGS) $(CXXFLAGS) \
            -MM $< \
            | sed 's|\.o||' \
            | sed 's|\.hpp|\.lo|g' \
            | sed 's|[[:alnum:]/]*/||g' \
            > $@
ifneq ($(MAKECMDGOALS),clean)
  -include ${addprefix $(builddir)/,$(depends)}
endif
