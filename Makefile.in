# @configure_input@

# Package
package      := @PACKAGE_NAME@
version      := @PACKAGE_VERSION@
major        := @PACKAGE_MAJOR_VERSION@
minor        := @PACKAGE_MINOR_VERSION@
tarname      := @PACKAGE_TARNAME@
linkername   := lib$(tarname).so
soname       := lib$(tarname).so.0

# Directories
prefix       := @prefix@
exec_prefix  := @exec_prefix@
bindir       := @bindir@
libdir       := @libdir@
includedir   := @includedir@
myincludedir := $(includedir)/$(tarname)
srcdir       := src
testdir      := test
builddir     := build
srcmods      := $(srcdir)/ \
                ${filter %/,${wildcard $(srcdir)/*/}} \
                ${filter %/,${wildcard $(srcdir)/*/*/}}
testmods     := $(testdir)/ \
                ${filter %/,${wildcard $(testdir)/*/}} \
                ${filter %/,${wildcard $(testdir)/*/*/}}
VPATH        := $(srcdir) $(testdir) $(builddir) $(srcmods) $(testmods)

# Tools
CXX          := @CXX@
INCLUDES     := -I./ -I$(srcdir)/ ${addprefix -I,$(srcmods)}
DEFS         := @DEFS@
CXXFLAGS     := @CXXFLAGS@ $(DEFS) -fPIC $(INCLUDES)
LIBS         := @LIBS@
LDFLAGS      := @LDFLAGS@
INSTALL      := @INSTALL@

# Files
sources      := ${foreach m,$(srcmods),${wildcard $(m)*.cpp}}
headers      := ${subst .cpp,.hpp,$(sources)}
objects      := ${notdir ${subst .cpp,.o,$(sources)}}
fixtures     := ${foreach m,$(testmods),${wildcard $(m)*.cxx}}
tests        := ${notdir ${subst .cxx,,$(fixtures)}}
depends      := ${subst .o,.d,$(objects)} ${addsuffix .d,$(tests)}
library      := lib$(tarname).so.0.1.1

# Interface
.PHONY: all clean distclean maintainer-clean
.DEFAULT: all
all: objects tests library
clean:
	$(RM) -r $(builddir)
distclean: clean
	$(RM) config.h
	$(RM) config.log
	$(RM) config.status
	$(RM) Makefile
maintainer-clean: distclean
	$(RM) aclocal.m4
	$(RM) -r autom4te.cache
	$(RM) autoscan.log
	$(RM) configure.scan
	$(RM) config.guess
	$(RM) config.h.in
	$(RM) config.sub
	$(RM) configure
	$(RM) install-sh

# Objects
.PHONY: objects
objects: $(objects)
%.o: %.cpp %.hpp
	@echo "  CXX   $@"
	@$(CXX) \
            $(CXXFLAGS) \
            -c $< -o $(builddir)/$@

# Tests
.PHONY: tests
tests: $(tests)
%: %.cxx
	@echo "  CXX   $@"
	@$(CXX) \
            $(CXXFLAGS) $(LDFLAGS) \
            $< -o $(builddir)/$@ \
            ${addprefix build/,${notdir ${filter %.o,$^}}} \
            $(LIBS)

# Library
.PHONY: library
library: $(library)
$(library): objects
	@echo "  CXX   $@"
	@$(CXX) \
            -shared -Wl,-soname,$(soname) \
            -o $@ \
            ${addprefix build/,$(objects)}

# Installation
.PHONY: install uninstall
install:
	@echo "  INSTALL $(library)"
	@$(INSTALL) -d $(libdir)
	@$(INSTALL) -m 0644 $(library) $(libdir)
	@ln -s -f -T $(libdir)/$(library) $(libdir)/$(linkername)
	@ldconfig $(libdir)
	@echo "  INSTALL *.hpp *.h"
	@$(INSTALL) -d $(myincludedir)
	@$(INSTALL) -m 0644 config.h $(myincludedir)
	@$(INSTALL) -m 0644 src/*.hpp $(myincludedir)
	@$(INSTALL) -m 0644 src/*.h $(myincludedir)
	@$(INSTALL) -m 0644 src/*/*.hpp $(myincludedir)
	@$(INSTALL) -m 0644 src/*/*.h $(myincludedir)
	@$(INSTALL) -m 0644 src/*/*/*.hpp $(myincludedir)
	@$(INSTALL) -m 0644 src/*/*/*.h $(myincludedir)
uninstall:
	@echo "  UNINSTALL $(library)"
	@$(RM) $(libdir)/$(library)
	@$(RM) $(libdir)/$(linkername)
	@ldconfig $(libdir)
	@echo "  UNINSTALL *.hpp *.h"
	@$(RM) -r $(includedir)/$(tarname)

# Dependencies
.PHONY: depends
depends: $(depends)
$(builddir)/%.d: %.hpp
	@echo "  GEN   $@"
	@$(INSTALL) -d $(builddir)
	@$(CXX) \
            $(CXXFLAGS) \
            -MM $< \
            > $@
$(builddir)/%.d: %.cxx
	@echo "  GEN   $@"
	@$(INSTALL) -d $(builddir)
	@$(CXX) \
            $(CXXFLAGS) \
            -MM $< \
            | sed 's|\.o||' \
            | sed 's|\.hpp|\.o|g' \
            | sed 's|[[:alnum:]/]*/||g' \
            > $@
ifneq ($(MAKECMDGOALS),clean)
  -include ${addprefix $(builddir)/,$(depends)}
endif
